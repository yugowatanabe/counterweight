{
  "name": "CounterWeight",
  "version": "1.0.2",
  "description": "Discover different persepectives on an event across news sources.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "tabs",
    "storage",
    "downloads",
    "contextMenus",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/scale16.png",
      "32": "images/scale32.png",
      "48": "images/scale48.png",
      "128": "images/scale128.png"
    }
  },
  "icons": {
    "16": "images/scale16.png",
    "32": "images/scale32.png",
    "48": "images/scale48.png",
    "128": "images/scale128.png"
  },
  "manifest_version": 2
}
